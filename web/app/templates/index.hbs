        -webkit-font-smoothing: antialiased;
        -moz-font-smoothing: grayscale;
        background-color: #dadada;
        font-family: 'Montserrat', sans-serif;
    }

    #cinoheader {
        font-family: 'Montserrat', sans-serif;
    }

    #cardheader {
        font-family: 'Montserrat', sans-serif;
    }

