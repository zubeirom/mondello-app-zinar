<div class="ui stackable grid">
    <div class="six wide column"></div>
    <div class="four wide column">
        <div class="ui green raised segment">
            <h1 class="ui medium green header">
                Account einloggen
            </h1>
            <br>
            <div class="ui form">
                <div class="field">
                    <label for="">Benutzername</label>
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        {{input value=this.username type="text" placeholder="username" enter=(action "redirect")}}
                    </div>
                </div>
                <div class="field">
                    <label for="">Kennwort</label>
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        {{#if this.showPassword}}
                        {{input value=this.password type="text" placeholder="password" enter=(action "redirect")}}
                        {{else}}
                        {{input value=this.password type="password" placeholder="password" enter=(action "redirect")}}
                        {{/if}}
                    </div>
                </div>
                {{#if this.loader}}
                <div class="ui active centered inline loader"></div>
                {{else}}
                <div class="field">
                    <button class="ui fluid green button" {{action "authenticate" }}>Login</button>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="six wide column"></div>
</div>